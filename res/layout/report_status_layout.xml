<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/com_sibext_crashcatcher_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/error_type"
        android:layout_gravity="center"
        android:textSize="@dimen/main_text_medium"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/com_sibext_crashcatcher_button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/exit"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rectangle_light_blue"
        android:textSize="@dimen/main_text_medium"
        android:layout_marginBottom="10dp"/>


</LinearLayout>